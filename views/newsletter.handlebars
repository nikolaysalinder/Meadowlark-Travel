<h2>Подпишитесь на нашу рассылку для получения новостей и специальный предожений!</h2>
<form class="form-horizontal" role="form" action="/process?form=newsletter" method="POST">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <div class="form-group">
    <label for="fieldName" class="col-sm-2 control-label" >Имя</label>
      <input class="form-control" type="text" id="fieldName" name="name">
    </div>
  </div>
  <div class="form-group">
    <label for="fieldEmail" class="form-control" required id="fieldEmail" name="email">Электронный адрес</label>
    <div class="col-sm-4">
      <input type="email" class="form-control" required id="fieldEmail" name="email"> 
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4" >
      <button type="submit" class="btn btn-default">Зарегистрироваться</button>
    </div>
  </div>
</form>
{{#section 'jquery'}}
  <script>
    $(document).ready(function(){
      $('.newsletterForm').on('submit'< function(evt){
        evt.preventDefault();
        var action = $(this).closest('.formContainer');
        var $container =  $(this).closest('.formContainer');
        $.ajax({
          url: action,
          type: 'POST',
          data: $(this).serialize(),
          succes: function(data){
            if(data.succes){
              $container.html('<h2>Спасибо</h2>');
            }else{
              $container.html('<h2>Возникла проблема</h2>');
            }
          },
          error: function(){
            $container.html('Возникла проблема');
          }
        });
      });
    });
  </script>
{{/section}}